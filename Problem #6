#include <iostream>
using namespace std;

int main()
{
    int n, i, A, B, nextN;

    cout << "Enter the number of terms: ";
    cin >> n;

    cout << "Fibonacci Series: ";

    for (int i = 1; i <= n; i++)
    {
      
        if(i == 1)
        {
            cout << " " << A << " ";
            continue;
        }
        if(i == 2)
        {
            cout << B << " ";
            continue;
        }
        nextN = A + B;
        A = B;
        B = nextN;
        
        cout << nextN << " ";
    }
    return 0;
}
